{
    "extends": [
       "prettier"
    ],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "comma-dangle": ["error", {
            "arrays": "ignore",
            "objects": "ignore",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }],
        "no-unused-vars": 0,
        "no-console": 0
    },
    "plugins": [
        "prettier"
    ],
    "parser": "babel-eslint", 
    "parserOptions":{
          "ecmaVersion" : 2016,
          "sourceType" : "module",
          "ecmaFeature" : {
              " ": true
          } 
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
}
